#pragma once

#include <yee/YeelightStatus>
#include <cc/View>

namespace cc::yee {

/** \brief Controller for RGB lights
  */
class ColorController: public View
{
public:
    /** Create a null color controller
      */
    ColorController() = default;

    /** Create a new contoller for \a light
      */
    ColorController(const YeelightStatus &status);

    ColorController &associate(Out<ColorController> self);

    ColorController &onDismissed(Fun<void()> &&f);

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc::yee
