#pragma once

#include <owlux/YeelightStatus>
#include <cc/View>

namespace cc { class StackView; }

namespace cc::owlux {

/** \brief Controller for smart LED lights
  */
class ColorController final: public View
{
public:
    /** Create a null color controller
      */
    ColorController() = default;

    /** Create a new contoller for \a light
      */
    ColorController(const YeelightStatus &status, const StackView &stack);

    /** Get a weak reference in \a self
      */
    ColorController &associate(Out<ColorController> self);

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc::owlux
