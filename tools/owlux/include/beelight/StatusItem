#pragma once

#include <owlux/YeelightStatus>
#include <cc/ListItem>

namespace cc::owlux {

class StatusItem final: public ListItem
{
public:
    StatusItem() = default;

    StatusItem(const YeelightStatus &status);

    StatusItem &associate(Out<StatusItem> self);

    const YeelightStatus &status() const;
    StatusItem &status(const YeelightStatus &newValue);

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc::owlux
