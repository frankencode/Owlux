#pragma once

#include <yee/YeelightStatus>
#include <yee/YeelightCommand>
#include <yee/YeelightResult>
#include <yee/YeelightUpdate>
#include <yee/YeelightProtocolError>
#include <cc/Channel>
#include <cc/Variant>

namespace cc::yee {

class YeelightControl final: public Object
{
public:
    YeelightControl() = default;

    explicit YeelightControl(const SocketAddress &address);

    YeelightResult execute(const YeelightCommand &command);

    Channel<YeelightCommand> requestChannel();
    Channel<YeelightResponse> responseChannel();

private:
    struct State;

    State &me();
};

} // namespace cc::yee
